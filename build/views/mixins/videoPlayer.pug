mixin videoPlayer(video = {})
  .videoPlayer#jsVideoPlayer
    video(src=video.src)
    .videoPlayer__controls
      progress.videoPlayer__progressBar#jsProgressBar(max="100", min="0", value="0")
      .videoPlayer__playPart
        span#jsPlayButton
          i.fas.fa-play
        span
          span#currentTime 00:00:00
          span  / 
          span#totalTime 00:00:00
      .videoPlayer__volumePart
        span#jsVolumeBtn
          i.fas.fa-volume-up
        input.videoPlayer__volume#jsVolume(type="range", min="0" max="1" value="0.5" step="0.1")
      .videoPlayer__screenPart
        span#jsFullScreen
          i.fas.fa-expand